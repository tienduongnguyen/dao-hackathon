{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": false /* Skip type checking of declaration files. */,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@src/*": ["./src/*"],
      "@screen/*": ["./src/screens/*"],
      "@constant": ["./src/constants/Constant"],
      "@api": ["./src/services/index"],
      "@action": ["./src/redux/actions"],
      "@components-old": ["./src/components"],
      "@theme-old": ["./src/constants/Theme"],
      "@R": ["./src/assets/R"],
      "@navigation": ["./src/navigation/index"],
      "@assets/*": ["./src/assets/*"],
      "@routers": ["./src/navigation/routers"],
      "@assets": ["./src/assets"],
      "@common": ["./src/common"],
      "@hooks": ["./src/common/hooks"],
      "@validate": ["./src/common/yup-validate"],
      "@typed-redux-saga": ["./src/common/typed-redux-saga"],
      "@animated": ["./src/common/animated/index"],
      "@config": ["./src/config"],
      "@components": ["./src/library/components"],
      "@components/*": ["./src/library/components/*"],
      "@networking": ["./src/library/networking"],
      "@utils": ["./src/library/utils"],
      "@storage": ["./src/library/utils/storage"],
      "@model": ["./src/model"],
      "@store": ["./src/store"],
      "@redux-slice": ["./src/redux/action-slice"],
      "@redux-action-type": ["./src/redux/action-type"],
      "@saga": ["./src/redux/saga"],
      "@theme": ["./src/themes"],
      "@theme/*": ["./src/themes/*"],
      "@transition": ["./src/transition"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
